@using kiniaawiBooks.Models;
@model IEnumerable<Books>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="bi bi-plus-square"></i> Add New Book </a>
    </div>
</div>
<form method="post">
    <div class="form-group row">
        <div class="col-md-3">
            <input type="number" class="form-control" name="lowAmount" />
        </div>
        <div class="col-md-3">
            <input type="number" class="form-control" name="largeAmount" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
        <div class="coll-md-3"></div>
    </div>
</form>
<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Price)
                </th>
                @*<th>
            @Html.DisplayNameFor(c => c.Image)
        </th>*@
                <th>
                    @Html.DisplayNameFor(c => c.BookCategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.IsAvaliable)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td><img src="~/@item.Image" alt="Image" class="img-thumbnail" style="height:200px; width:700px;" /></td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Price</td>

                <td>@item.BookCategories.BookCategory</td>
                <td>@item.Description</td>
                <td>@item.IsAvaliable</td>
                <td>
                    <partial name="_ButtonPartial2" model="@item.Id" />
                </td>
            </tr>
            }
        </tbody>


    </table>
</div>

