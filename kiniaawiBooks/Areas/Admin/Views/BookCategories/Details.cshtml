@model kiniaawiBooks.Models.BookCategories
@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-info">Book Category Details</h2>
<br />
<form asp-action="Details" method="post">
    <div class="panel panel-default" style="padding-left:20px; padding-top: 25px; padding-bottom: 10px; padding-right:10px;">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="BookCategory"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="BookCategory" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="BookCategory" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Edit</a>
            <a asp-action="Index" class="btn btn-success"><i class="bi bi-arrow-return-left"></i> Back to List</a>
            @*@<input type="submit" class="btn btn-success" value="Back to List" />**@
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml"); }
}
