@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="bi bi-plus-square"></i> New Role</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Name
            </th>
           <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>
                <td></td>
                <td></td>
                <td style="width:135px;">
                    <div class="btn-group">
                        
                        <a asp-action="Delete" asp-controller="Role" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="bi bi-trash-fill"></i> Delete Role
                        </a>
                    </div>
                </td>

            </tr>
         }
    </table>
</div>