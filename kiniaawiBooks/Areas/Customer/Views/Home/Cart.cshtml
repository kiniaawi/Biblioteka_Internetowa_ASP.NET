@using kiniaawiBooks.Models
@model List<Books>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<br/>
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Book Category</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="~/@item.Image" width="150px" height="200px" />
                </td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Price</td>
                <td>@item.BookCategories.BookCategory</td>
                <td>@item.Description</td>
                <td>
                    <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home Page</a>
    </div>
    <div class="col-md-6 text-right">
        <h4>Total Amount</h4>
        <h5> @Model.Sum(c=>c.Price) <i class="bi bi-currency-dollar"></i></h5>
        <a asp-ares="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Procees to Checkout</a>
    </div>
</div>