@model int

<td style="width:135px;">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Book" class="btn btn-primary" asp-route-id="@Model">
            <i class="bi bi-pencil-fill"></i>
        </a>
        <a asp-action="Details" asp-controller="Book" class="btn btn-success" asp-route-id="@Model">
            <i class="bi bi-card-list"></i>
        </a>
        <a asp-action="Delete" asp-controller="Book" class="btn btn-danger" asp-route-id="@Model">
            <i class="bi bi-trash-fill"></i>
        </a>
    </div>
</td>
